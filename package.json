{
    "name": "@bravobit/scss-starter",
    "version": "1.0.5",
    "description": "The simple SCSS starter",
    "license": "CC0-1.0",
    "keywords": [
        "css",
        "scss",
        "compiled-css",
        "library",
        "web",
        "starter"
    ],
    "author": {
        "name": "Stan van Heumen <stan@bravobit.nl>",
        "url": "https://www.linkedin.com/in/stan-van-heumen-86b4ab10a"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/bravobit/scss-starter.git"
    },
    "bugs": {
        "url": "https://github.com/bravobit/scss-starter.git/issues"
    },
    "homepage": "https://github.com/bravobit/scss-starter#readme",
    "scripts": {
        "build": "node-sass src/styles.scss dist/styles.css --output-style compressed --source-map dist",
        "build:watch": "node-sass src/styles.scss dist/styles.css --watch --output-style compressed --source-map dist",
        "prepublish": "npm run build"
    },
    "devDependencies": {
        "node-sass": "^4.6.0"
    }
}
